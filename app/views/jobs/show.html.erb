<div class="container mt-5">
  <!-- 求人タイトル -->
  <h2 class="mb-4"><%= @job.title %></h2>

  <!-- 求人詳細テーブル -->
  <table class="table table-bordered">
    <tbody>
      <tr>
        <th class="bg-light" style="width: 20%;">仕事内容</th>
        <td><%= @job.description %></td>
      </tr>
      <tr>
        <th class="bg-light">給与</th>
        <td><%= @job.salary %></td>
      </tr>
      <tr>
        <th class="bg-light">勤務地</th>
        <td><%= @job.location %></td>
      </tr>
      <tr>
        <th class="bg-light">雇用形態</th>
        <td><%= @job.employment_type %></td>
      </tr>
      <tr>
        <th class="bg-light">連絡先情報</th>
        <td><%= @job.contact_info %></td>
      </tr>
      <tr>
        <th class="bg-light">掲載開始日</th>
        <td><%= @job.posted_at.strftime("%Y年%m月%d日") if @job.posted_at %></td>
      </tr>
      <tr>
        <th class="bg-light">掲載終了日</th>
        <td><%= @job.expires_at.strftime("%Y年%m月%d日") if @job.expires_at %></td>
      </tr>
      <tr>
        <th class="bg-light">作成日時</th>
        <td><%= @job.created_at.strftime("%Y年%m月%d日 %H:%M") %></td>
      </tr>
      <tr>
        <th class="bg-light">更新日時</th>
        <td><%= @job.updated_at.strftime("%Y年%m月%d日 %H:%M") %></td>
      </tr>
    </tbody>
  </table>

  <!-- 戻るボタン -->
  <div class="text-center mt-4">
    <%= link_to "求人一覧に戻る", jobs_path, class: "btn btn-outline-secondary" %>
  </div>
</div>